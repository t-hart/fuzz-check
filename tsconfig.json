{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts"]
}
