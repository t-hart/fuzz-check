{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "include": ["src/**/*"]
}
